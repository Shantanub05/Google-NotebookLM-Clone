{
  "name": "notebooklm-clone",
  "version": "1.0.0",
  "private": true,
  "description": "Google NotebookLM Clone - PDF Chat with RAG",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace backend dev\" \"yarn workspace frontend dev\"",
    "dev:frontend": "yarn workspace frontend dev",
    "dev:backend": "yarn workspace backend dev",
    "build": "yarn workspace shared build && yarn workspace backend build && yarn workspace frontend build",
    "build:frontend": "yarn workspace frontend build",
    "build:backend": "yarn workspace backend build",
    "start:frontend": "yarn workspace frontend start",
    "start:backend": "yarn workspace backend start",
    "lint": "yarn workspace frontend lint && yarn workspace backend lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules shared/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "repository": {
    "type": "git",
    "url": "local"
  },
  "author": "",
  "license": "MIT"
}
